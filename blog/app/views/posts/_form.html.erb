<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :category %>
    <%= f.select(:category_id) do %>
      <% display_categories.each do |category| %>
        <%= content_tag(:option, category.name, value: category.id) %>
      <% end %>
    <% end %>
    <%= link_to 'New Category', new_category_url %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


